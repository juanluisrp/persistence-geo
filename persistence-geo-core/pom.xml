    <build>
        <finalName>${project.artifactId}</finalName>

		<filters>
			<filter>src/main/filters/${filter.profile}</filter>
		</filters>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <targetPath>test-classes</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<optimize>true</optimize>
					<debug>true</debug>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <profiles>
    	<!-- ================= Profiles to deploy ================= -->
    	<profile>
			<id>local</id>
			<properties>
				<filter.profile>local.properties</filter.profile>
			</properties>
		</profile>
    	<profile>
			<id>first</id>
			<properties>
				<!-- Database validate -->
				<database.hibernate.hbm2ddl.auto>create</database.hibernate.hbm2ddl.auto>
				<filter.profile>${filterToApply}.properties</filter.profile>
			</properties>
		</profile>
	    <profile>
	      <id>test</id>
	      <properties>
                <filter.profile>test.properties</filter.profile>
	      </properties>
	      <activation><activeByDefault>true</activeByDefault></activation>
	    </profile>
	    <profile>
	    	<id>devel</id>
	      	<properties>
				<!-- Database validate -->
				<database.hibernate.hbm2ddl.auto>create</database.hibernate.hbm2ddl.auto>
	    		<filter.profile>devel.properties</filter.profile>
	    	</properties>
	    </profile>
    </profiles>

</project>
